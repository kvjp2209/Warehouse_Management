@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form>
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Register Form</p>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <div>Enter Username:</div>
                        <input type="text" id="form3Example3" class="form-control form-control-lg" name="username"/>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <div>Enter Password:</div>
                        <input type="password" id="" class="form-control form-control-lg" name="password"/>
                    </div>
                    <!-- Re_Password input -->
                    <div class="form-outline mb-3">
                        <div>Re-Enter Password:</div>
                        <input type="password" id="" class="form-control form-control-lg" name="repassword" />
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Register
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Already have an account? <a asp-area="" asp-controller="Account" asp-action="Login"
                                                        class="link-danger">Login</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>