<div class="sidebar-sticky pt-3">
    <ul class="nav flex-column">
        <style>
            .active-sidebar {
                font-weight: bold;
                background-color: gainsboro !important;
                color: black !important;
            }

            .side-bar-item {
                transition: 0.2s all;
            }

                .side-bar-item:hover {
                    font-weight: bold;
                    background-color: gainsboro !important;
                    color: black !important;
                }
        </style>
        @{
            var action = Context.Request.RouteValues["action"].ToString();
        }
        <li class="nav-item">
            <a class="@(action == "EmployeeManagement" || action == "CreateEmployee" ? "active active-sidebar" : "") side-bar-item list-group-item list-group-item-action border-top-0 border-right-0 border-left-0 border-bottom border-dark" asp-action="EmployeeManagement">
                <span data-feather="file"></span>Employee
            </a>
        </li>
        <li class="nav-item">
            <a class="@(action == "SupplierManagement" || action == "CreateSupplier" ? "active active-sidebar" : "") side-bar-item list-group-item list-group-item-action border-top-0 border-right-0 border-left-0 border-bottom border-dark" asp-action="SupplierManagement">
                <span data-feather="file"></span>Supplier
            </a>
        </li>
    </ul>
</div>
