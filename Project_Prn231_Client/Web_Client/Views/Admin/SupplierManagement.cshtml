@{
    ViewData["Title"] = "Admin";
    Layout = "_Admin_Layout";
}
@model List<Web_Client.Data.ResponseDTO.SupplierResponseDTO>

<style>
    #customers {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }
</style>
<h1>Supplier</h1>
<div>
    <a asp-action="CreateSupplier" class="btn btn-outline-success mb-3">+ Create New</a>
</div>
<table id="customers">
    <tr>
        <th>Supplier ID</th>

        <th>Supplier Name</th>

        <th>Address</th>

        <th>Phone Number</th>
        <th>Action</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>@product.SupplierId</td>

            <td>@product.SupplierName</td>

            <td>@product.Address</td>

            <td>@product.PhoneNumber</td>
            <td>
                <a asp-route-id="@product.SupplierId" asp-action="DeleteSupplier" class="btn btn-dark mt-2">Delete</a>
            </td>
        </tr>
    }

</table>
@if (Model.Count == 0)
{
    <em>(No item here)</em>
}


