@{
    ViewData["Title"] = "Admin";
    Layout = "_Admin_Layout";
}
@model List<Web_Client.Data.ResponseDTO.SupplierResponseDTO>

<h1>Supplier</h1>
<div>
    <a asp-action="CreateSupplier" class="btn btn-outline-success mb-3">+ Create New Supplier</a>
</div>
<div class="col-lg-10 mt-3">
    <table id="data-table" class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Supplier ID</th>

                <th>Supplier Name</th>

                <th>Address</th>

                <th>Phone Number</th>

                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.SupplierId</td>

                    <td>@supplier.SupplierName</td>

                    <td>@supplier.Address</td>

                    <td>@supplier.PhoneNumber</td>
                    <td>
                        <a asp-route-id="@supplier.SupplierId" asp-action="DeleteSupplier" class="btn btn-dark mt-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.Count == 0)
{
    <em>(No item here)</em>
}


