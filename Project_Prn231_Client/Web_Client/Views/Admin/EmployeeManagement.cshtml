@using Web_Client.Data.ResponseDTO;
@{
    ViewData["Title"] = "Supplier";
    Layout = "_Admin_Layout";
}
@model List<EmployeeResponseDTO>


<h1>Employee</h1>
<div>
    <a asp-action="CreateEmployee" class="btn btn-outline-success mb-3">+ Create New</a>
</div>
<div class="col-md-9 col-lg-10 mt-3">
    <table id="data-table" class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Employee ID</th>

                <th>Employee Name</th>

                <th>Address</th>

                <th>PhoneNumber</th>

                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.EmployeeId</td>

                    <td>@product.EmployeeName</td>

                    <td>@product.Address</td>

                    <td>@product.PhoneNumber</td>

                    <td>@product.Email</td>
                    <td>
                        <a asp-route-id="@product.EmployeeId" asp-action="DeleteEmployee" class="btn btn-dark mt-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.Count == 0)
{

    <em>(No item here)</em>

}


